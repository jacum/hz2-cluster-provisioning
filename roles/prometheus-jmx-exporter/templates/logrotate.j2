{{ jmx_exporter_log_path }} {
  daily
  sharedscripts
  notifempty
  missingok
  rotate 7
  size 500M
  compress
  delaycompress
  create 664 {{ jmx_exporter_user }} {{ jmx_exporter_group }}
  postrotate
        [ ! -f /run/jmx_exporter/jmx_exporter.pid ] || systemctl restart jmx_exporter.service
  endscript
}
